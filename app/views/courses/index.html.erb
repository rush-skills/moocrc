<h1>Listing Courses</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Completed</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.description %></td>
        <td><%= course.instructor %></td>
        <td><%= link_to 'Show', course(:id => cour) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

